@model IEnumerable<EstacionamentoTech.Models.Cliente>

@{
	ViewData["Title"] = "Clientes";
}

<h2>@ViewData["Title"]</h2>

<p>
	<a asp-action="NovoCliente" class="btn btn-primary" >Adicionar Novo Cliente</a>
</p>

<table class="table">

	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Id)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Nome)
			</th>
			<th>
			</th>
		</tr>
	</thead>

	<tbody>
		@foreach(var cliente in Model)
		{
			<tr>
				<td>
					@cliente.Id
				</td>
				<td>
					@cliente.Nome
				</td>
				<td>
					<a asp-action="EditarCliente" asp-route-id="@cliente.Id" class="btn btn-secondary">Editar</a> |
					<a asp-action="Deletar" asp-route-id="@cliente.Id" class="btn btn-danger">Deletar</a>
				</td>
			</tr>
		}
	</tbody>

</table>
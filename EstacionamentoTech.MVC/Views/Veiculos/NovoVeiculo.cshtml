@model EstacionamentoTech.Models.Veiculo

@{
	ViewData["Title"] = "Adicionar Novo Veículo";
}

<h1>
	@ViewData["Title"]
</h1>

<hr>

<div class="row">
	<div class="col-md-4">
		<form asp-action="NovoVeiculo">
			<div class="form-group">
				<label asp-for="Nome" class="control-label"></label>
				<input asp-for="Nome" class="form-control" />
			</div>
			<div class="form-group">
				<label asp-for="Ano" class="control-label"></label>
				<input asp-for="Ano" class="form-control" />
			</div>
			<div class="form-group">
				<label asp-for="Tipo" value="Tipo do veículo" class="control-label"></label>
				<input asp-for="Tipo" class="form-control" />
			</div>
			<div class="form-group">
				<label asp-for="Placa" class="control-label"></label>
				<input asp-for="Placa" class="form-control" />
			</div>
			<br />
			<div class="form-group">
				<input type="submit" value="Criar" class="btn btn-primary" />
			</div>
		</form>

	</div>
</div>

<hr />

<div>
	<a asp-action="Index" class="btn btn-secondary">Voltar</a>
</div>
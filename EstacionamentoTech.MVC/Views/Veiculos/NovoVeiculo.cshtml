@model EstacionamentoTech.Models.Veiculo

@{
	ViewData["Title"] = "Adicionar Novo Veículo";
}

<h1>
	@ViewData["Title"]
</h1>

@if (TempData["Mensagens"] is List<string> mensagens)
{
	string tipoMensagem = TempData["Tipo"].ToString();

	switch (tipoMensagem)
	{
		case "4":
			<div class="alert alert-danger" role="alert">
				@foreach (var msg in mensagens)
				{
					<p>@msg</p>
				}
			</div>
			break;
		case "2":
			<div class="alert alert-warning" role="alert">
				@foreach (var msg in mensagens)
				{
					<p>@msg</p>
				}
			</div>
			break;
		case "1":
			<div class="alert alert-info" role="alert">
				@foreach (var msg in mensagens)
				{
					<p>@msg</p>
				}
			</div>
			break;
	}
}

<hr>

<div class="row">
	<div class="col-md-4">
		<form asp-action="NovoVeiculo">
			<div class="form-group">
				<label asp-for="Cliente" class="control-label"></label>
				@Html.DropDownList("Cliente", (IEnumerable<SelectListItem>)ViewBag.Clientes, "Selecione o proprietário do veículo")
			</div>
			<div class="form-group">
				<label asp-for="Nome" class="control-label"></label>
				<input asp-for="Nome" class="form-control" />
			</div>
			<div class="form-group">
				<label asp-for="Ano" class="control-label"></label>
				<input asp-for="Ano" class="form-control" />
			</div>
			<div class="form-group">
				<label asp-for="Tipo" value="Tipo do veículo" class="control-label"></label>
				<input asp-for="Tipo" class="form-control" />
			</div>
			<div class="form-group">
				<label asp-for="Placa" class="control-label"></label>
				<input asp-for="Placa" class="form-control" maxlength="7"/>
			</div>
			<br />
			<div class="form-group">
				<input type="submit" value="Criar" class="btn btn-primary" />
			</div>
		</form>

	</div>
</div>

<hr />

<div>
	<a asp-action="Index" class="btn btn-secondary">Voltar</a>
</div>
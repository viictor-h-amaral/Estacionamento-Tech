@model EstacionamentoTech.Models.HistoricoEstacionamentos

@{
	ViewData["Title"] = "Editar Histórico de Estacionamento";
}

<h1>
	@ViewData["Title"]
</h1>

<hr>

<div class="row">

	<div class="col-md-4">
		<form asp-action="EditarEstacionamento">
			<div class="form-group">
				<label asp-for="Veiculo" class="control-label"></label>
				@Html.DropDownList("Veiculo", (IEnumerable<SelectListItem>)ViewBag.Veiculos, "Selecione o veículo")
			</div>
			<div class="form-group">
				<label asp-for="Entrada" class="control-label"></label>
				<input asp-for="Entrada" class="form-control" autofocus />
			</div>
			<div class="form-group">
				<label asp-for="Saida" class="control-label"></label>
				<input asp-for="Saida" class="form-control" autofocus />
			</div>
			<div class="form-group">
				<label asp-for="HorasCobradas" class="control-label"></label>
				<input asp-for="HorasCobradas" class="form-control" autofocus />
			</div>
			<div class="form-group">
				<label asp-for="ValorCobrado" class="control-label"></label>
				<input asp-for="ValorCobrado" class="form-control" autofocus />
			</div>
			<div class="form-group">
				<label asp-for="Pago" class="control-label"></label>
				<input type="checkbox" asp-for="Pago" class="form-check-input" autofocus />
			</div>
			<br />
			<div class="form-group">
				<input type="submit" value="Salvar" class="btn btn-primary"/>
			</div>
		</form>
	</div>

</div>

<hr/>

<div>
	<a asp-action="Index" class="btn btn-secondary">Voltar</a>
</div>
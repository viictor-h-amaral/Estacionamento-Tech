@model IEnumerable<EstacionamentoTech.Models.HistoricoEstacionamentos>

<style>
	.pagination {
		margin: 20px 0;
	}

	.pagination-info {
		text-align: center;
		margin-top: 10px;
	}

	.page-link {
		color: #007bff;
	}

	.page-item.active .page-link {
		background-color: #007bff;
		border-color: #007bff;
	}
</style>

@{
	ViewData["Title"] = "Histórico de estacionamentos";

	int paginaAtual = ViewBag.PaginaAtual ?? 1;
	int totalPaginas = ViewBag.TotalPaginas ?? 1;

	string placa = ViewBag.Placa ?? "";
	string veiculo = ViewBag.Veiculo ?? "";
	string entrada = ViewBag.Entrada ?? "";
	string saida = ViewBag.Saida ?? "";

	bool possuiFiltro = !string.IsNullOrEmpty(placa)
						|| !string.IsNullOrEmpty(veiculo)
						|| !string.IsNullOrEmpty(entrada)
						|| !string.IsNullOrEmpty(saida);
}

<h2>@ViewData["Title"]</h2>

<p>
	<a asp-action="NovoEstacionamento" class="btn btn-primary" >Adicionar Novo Histórico de Estacionamento</a>
</p>

<table class="table">

	<form asp-action="Index" method="get">
		<div class="form-group">
			<div>
				<h6>Placa:</h6> <input type="text" name="Placa" value="@placa" class="btn btn-outline-dark">
			</div>
			<div>
				<h6>Veículo:</h6> <input type="text" name="Veiculo" value="@veiculo" class="btn btn-outline-dark">
			</div>
			<div>
				<h6>Entrada:</h6> <input type="date" name="Entrada" value="@entrada" class="btn btn-outline-dark">
			</div>
			<div>
				<h6>Saída:</h6> <input type="date" name="Saida" value="@saida" class="btn btn-outline-dark">
			</div>
			<br />
			<input type="submit" value="Buscar" class="btn btn-primary" />
			@if (possuiFiltro)
			{
				<a asp-action="Index" class="btn btn-secondary">Limpar Filtros</a>
			}
		</div>
		<br />
	</form>

	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Id)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.IdentificacaoVeiculo)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Proprietario)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Entrada)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Saida)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.HorasCobradas)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.ValorCobrado)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Pago)
			</th>
			<th>
			</th>
		</tr>
	</thead>

	<tbody>
		@foreach(var estacionamento in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(model => estacionamento.Id)
				</td>
				<td>
					@Html.DisplayFor(model => estacionamento.IdentificacaoVeiculo)
				</td>
				<td>
					@Html.DisplayFor(model => estacionamento.Proprietario)
				</td>
				<td>
					@Html.DisplayFor(model => estacionamento.Entrada)
				</td>
				<td>
					@Html.DisplayFor(model => estacionamento.Saida)
				</td>
				<td>
					@Html.DisplayFor(model => estacionamento.HorasCobradas)
				</td>
				<td>
					@Html.DisplayFor(model => estacionamento.ValorCobrado)
				</td>
				<td>
					@Html.DisplayFor(model => estacionamento.Pago)
				</td>
				<td>

					@if (!estacionamento.Saida.HasValue)
					{
						<a asp-action="EditarEstacionamento" asp-route-id="@estacionamento.Id" class="btn btn-secondary">Editar</a>
						<a asp-action="FecharEstacionamento" asp-route-id="@estacionamento.Id" class="btn btn-success">Fechar</a>
						<a asp-action="DeletarEstacionamento" asp-route-id="@estacionamento.Id" class="btn btn-danger">Deletar</a>
						<a asp-action="DetalhesEstacionamento" asp-route-id="@estacionamento.Id" class="btn btn-outline-success">Detalhes</a>
					}
					else if (!estacionamento.Pago)
					{
						<a asp-action="PagarEstacionamento" asp-route-id="@estacionamento.Id" class="btn btn-success">Pagar</a>
						<a asp-action="DeletarEstacionamento" asp-route-id="@estacionamento.Id" class="btn btn-danger">Deletar</a>
						<a asp-action="DetalhesEstacionamento" asp-route-id="@estacionamento.Id" class="btn btn-outline-success">Detalhes</a>
					}
					else
					{
						<a asp-action="ArquivoCompra" asp-route-id="@estacionamento.Id" class="btn btn-success">Arquivo de compra</a>
						<a asp-action="DetalhesEstacionamento" asp-route-id="@estacionamento.Id" class="btn btn-outline-success">Detalhes</a>
					}
				</td>
			</tr>
		}
	</tbody>

</table>

<!-- Estrutura de paginação -->
@if (totalPaginas > 1)
{
	<nav aria-label="Navegação de páginas">
		<ul class="pagination">
			<!-- Botão Anterior -->
			@if (paginaAtual > 1)
			{
				<li class="page-item">
					<a class="page-link" href="@Url.Action("Index", 
									new {	pagina = paginaAtual - 1, 
											registrosPorPagina = ViewBag.RegistrosPorPagina,	
											Placa = placa,
											Veiculo = veiculo,
											Entrada = entrada,
											Saida = saida})">
						Anterior
					</a>
				</li>
			}
			else
			{
				<li class="page-item disabled">
					<span class="page-link">Anterior</span>
				</li>
			}

			<!-- Números das Páginas -->
			@for (int i = 1; i <= totalPaginas; i++)
			{
				if (i == paginaAtual)
				{
					<li class="page-item active">
						<span class="page-link">@i</span>
					</li>
				}
				else
				{
					<li class="page-item">
						<a class="page-link" href="@Url.Action("Index", 
								new {	pagina = i, 
										registrosPorPagina = ViewBag.RegistrosPorPagina, 
										Placa = placa,
										Veiculo = veiculo,
										Entrada = entrada,
										Saida = saida})">
							@i
						</a>
					</li>
				}
			}

			<!-- Botão Próximo -->
			@if (paginaAtual < totalPaginas)
			{
				<li class="page-item">
					<a class="page-link" href="@Url.Action("Index", 
						new {	pagina = paginaAtual + 1, 
								registrosPorPagina = ViewBag.RegistrosPorPagina, 
								Placa = placa,
								Veiculo = veiculo,
								Entrada = entrada,
								Saida = saida})">
						Próximo
					</a>
				</li>
			}
			else
			{
				<li class="page-item disabled">
					<span class="page-link">Próximo</span>
				</li>
			}
		</ul>
	</nav>
}

<!-- Informações da Paginação -->
<div class="pagination-info">
	<small class="text-muted">
		Página @paginaAtual de @totalPaginas
	</small>
</div>